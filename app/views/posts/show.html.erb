<h1>Show Post</h1>
<button><%= link_to "Home", root_path %></button>
<p><%= @post.author %></p>
<p><%= @post.title %></p>
<p><%= @post.body %></p>
<button><%= link_to "Edit", edit_post_path(@post) %></button>
<button class="btn btn-danger" ><%= link_to "Delete", post_path(@post), method: :delete, class: "text" %></button>
